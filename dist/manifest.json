{
    "manifest_version": 2,
    "name": "Loro",
    "description":
        "Aprende un nuevo idioma mientras navegas y sin darte ni cuenta !",
    "version": "0.0.0.2",
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "scripts": [ "js/background.js" ]
    },
    "web_accessible_resources": [
      "icon-card.png"
    ],
    "permissions": ["storage",
                    "activeTab",
                    "*://*.yahoo.com/*",
                    "*://*.twitter.com/*",
                    "*://*.wikipedia.org/*",
                    "*://*.marca.com/*",
                    "*://*.elpais.com/*",
                    "*://*.publico.es/*",
                    "*://*.milanuncios.com/*",
                    "*://*.elmundo.es/*",
                    "*://*.as.com/*",
                    "*://*.msn.com/*",
                    "*://*.idealista.com/*",
                    "*://*.wordpress.com/*",
                    "*://*.elconfidencial.com/*",
                    "*://*.bet365.es/*",
                    "*://*.pinterest.com/*",
                    "*://*.lavanguardia.com/*",
                    "*://*.abc.es/*",
                    "*://*.booking.com/*",
                    "*://*.tumblr.com/*",
                    "*://*.mediamarkt.es/*",
                    "*://*.forocoches/.com/*",
                    "*://*.wordreference.com/*",
                    "*://*.divxtotal.com/*",
                    "*://*.20minutos.es/*",
                    "*://*.telecinco.es/*",
                    "*://*.infojobs.net/*",
                    "*://*.eltiempo.es/*",
                    "*://*.tripadvisor.es/*",
                    "*://*.elcorteingles/.es/*",
                    "*://*.netflix.com/*",
                    "*://*.expansion.com/*",
                    "*://*.eleconomista.es/*",
                    "*://*.farodevigo.es/*",
                    "*://*.lavozdegalicia.es/*"
    ]
}
