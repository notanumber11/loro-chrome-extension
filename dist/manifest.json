{
    "manifest_version": 2,

    "name": "Transferendum",
    "description":
        "A chrome extension to learn new languages without even realising about it !",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "permissions": ["tabs", "<all_urls>", "https://transferendum-backend.herokuapp.com/"],
    "content_scripts" : [{
        "matches": ["http://*/*", "https://*/*" ],
        "js" : ["js/contentScript.js"]
    }]
}
