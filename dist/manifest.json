{
    "manifest_version": 2,
    "name": "Loro",
    "description":
        "Aprende un nuevo idioma mientras navegas y sin darte ni cuenta !",
    "version": "0.0.0.1",
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": ["https://transferendum-backend.herokuapp.com/", "storage", "activeTab"],
    "content_scripts" : [{
        "matches": ["http://*/*", "https://*/*" ],
        "exclude_globs": ["*bank*", "*health*", "*banco*", "*salud*", "*government*", "*://*.gob*"],
        "js" : ["js/contentScript.js"]
    }]
}
