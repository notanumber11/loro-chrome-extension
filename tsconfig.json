{
  "compilerOptions": {
    "target": "es5", //defines what sort of code ts generates, es5 because it's what most browsers currently UNDERSTANDS.
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/js",
    "rootDir": "src",
    "strict": false,
    "sourceMap": true,
    "resolveJsonModule": true // To be able to read jsons
  },
  "exclude": [
    "./tests/"
  ]
}
